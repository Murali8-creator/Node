{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext",
      "moduleResolution": "Node",
      "lib": ["ES2022"],
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "rootDir": "src",
      "outDir": "dist",
      "types": ["node"]
    },
    "include": ["src/**/*"],
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    }
  }